{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./build",
        "rootDir": "./src",
        "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}