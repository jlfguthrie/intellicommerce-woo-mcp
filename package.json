  "type": "module",
  "main": "./build/server.js",
  "exports": "./build/server.js",
  "bin": {
    "intellicommerce-woo-mcp": "./bin/intellicommerce-woo-mcp"
  },
  "preferGlobal": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node ./build/server.js",
    "dev": "tsx watch src/server.ts",
    "clean": "rimraf build",
    "lint": "echo \"âœ¨ Linting disabled for upstream compatibility - IntelliCommerceâœ¨ Made with ðŸ§¡ in Cape Town ðŸ‡¿ðŸ‡¦\"",
    "lint:fix": "echo \"âœ¨ Linting disabled for upstream compatibility - IntelliCommerceâœ¨ Made with ðŸ§¡ in Cape Town ðŸ‡¿ðŸ‡¦\"",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\" || true",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\" || true",
    "test": "echo \"Tests coming soon! Made with ðŸ§¡ in Cape Town ðŸ‡¿ðŸ‡¦\" && exit 0",
    "test:unit": "jest",
    "test:integration": "npm run mcp:inspect -- --timeout 10000",
    "test:all": "npm run test:unit && npm run test:integration",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run test:all",
    "security:check": "scripts/security-check.sh",
    "structure:check": "scripts/structure-check.sh",
    "deps:check": "scripts/dependencies-update.sh",
    "deps:update:patch": "scripts/dependencies-update.sh patch",
    "deps:update:minor": "scripts/dependencies-update.sh minor",
    "deps:update:interactive": "scripts/dependencies-update.sh interactive",
    "pre-publish": "npm run security:check && npm run structure:check && npm run validate",
