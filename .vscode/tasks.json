{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "✨ Build IntelliCommerce✨ Woo MCP",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "🚀 Start IntelliCommerce✨ Woo MCP Server",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*IntelliCommerce.*Woo MCP Server.*starting.*$",
          "endsPattern": "^.*IntelliCommerce.*Woo MCP Server.*running.*stdio.*$"
        }
      }
    },
    {
      "label": "🔄 Watch & Build IntelliCommerce✨ Woo MCP",
      "type": "shell",
      "command": "npx",
      "args": ["tsc", "--watch"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "🧹 Clean Build Directory",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "📦 Install Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "🔍 Test MCP Connection",
      "type": "shell",
      "command": "npx",
      "args": ["@modelcontextprotocol/inspector", "node", "${workspaceFolder}/build/server.js"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "dependsOn": "✨ Build IntelliCommerce✨ Woo MCP"
    },
    {
      "label": "🌿 Create Feature Branch",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "read -p 'Feature name (without feature/): ' name && git checkout main && git pull origin main && git checkout -b feature/$name"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "📤 Push Feature Branch",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "branch=$(git branch --show-current) && git push -u origin $branch"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "🔀 Create Pull Request",
      "type": "shell",
      "command": "gh",
      "args": ["pr", "create", "--web"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "🧹 Cleanup Feature Branch",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "current=$(git branch --show-current) && git checkout main && git pull origin main && git branch -d $current"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "⬆️ Check Upstream MCP Changes",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "git fetch upstream-mcp && echo '📊 Recent upstream changes in MCP directory:' && git log --oneline upstream-mcp/trunk~10..upstream-mcp/trunk -- mcp/woo/ && echo '' && echo '💡 To view specific changes: git show upstream-mcp/trunk:mcp/woo/<filename>'"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "📦 Check Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["run", "deps:check"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "🔒 Audit Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["run", "deps:audit"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "🩹 Update Patch Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["run", "deps:update:patch"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "📈 Update Minor Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["run", "deps:update:minor"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "🎯 Interactive Dependency Update",
      "type": "shell",
      "command": "npm",
      "args": ["run", "deps:update:interactive"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "🌿 Fresh Dependencies (Audit + Minor Update + Validate)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "deps:fresh"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "📈 Generate Changelog",
      "type": "shell",
      "command": "npm",
      "args": ["run", "changelog:generate"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "📦 Generate Dependency Changelog",
      "type": "shell",
      "command": "npm",
      "args": ["run", "changelog:deps"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "🔖 Release Patch Version",
      "type": "shell",
      "command": "npm",
      "args": ["run", "release:patch"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "🔖 Release Minor Version",
      "type": "shell",
      "command": "npm",
      "args": ["run", "release:minor"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "🛡️ Open Branch Protection Settings",
      "type": "shell",
      "command": "open",
      "args": ["https://github.com/jlfguthrie/intellicommerce-woo-mcp/settings/branches"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
