{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "âœ¨ Build IntelliCommerceâœ¨ Woo MCP",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "ğŸš€ Start IntelliCommerceâœ¨ Woo MCP Server",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*IntelliCommerce.*Woo MCP Server.*starting.*$",
          "endsPattern": "^.*IntelliCommerce.*Woo MCP Server.*running.*stdio.*$"
        }
      }
    },
    {
      "label": "ğŸ”„ Watch & Build IntelliCommerceâœ¨ Woo MCP",
      "type": "shell",
      "command": "npx",
      "args": ["tsc", "--watch"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "ğŸ§¹ Clean Build Directory",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ“¦ Install Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ” Test MCP Connection",
      "type": "shell",
      "command": "npx",
      "args": ["@modelcontextprotocol/inspector", "node", "${workspaceFolder}/build/server.js"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "dependsOn": "âœ¨ Build IntelliCommerceâœ¨ Woo MCP"
    },
    {
      "label": "ğŸŒ¿ Create Feature Branch",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "read -p 'Feature name (without feature/): ' name && git checkout main && git pull origin main && git checkout -b feature/$name"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ“¤ Push Feature Branch",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "branch=$(git branch --show-current) && git push -u origin $branch"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ”€ Create Pull Request",
      "type": "shell",
      "command": "gh",
      "args": ["pr", "create", "--web"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ§¹ Cleanup Feature Branch",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "current=$(git branch --show-current) && git checkout main && git pull origin main && git branch -d $current"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "â¬†ï¸ Check Upstream MCP Changes",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "git fetch upstream-mcp && echo 'ğŸ“Š Recent upstream changes in MCP directory:' && git log --oneline upstream-mcp/trunk~10..upstream-mcp/trunk -- mcp/woo/ && echo '' && echo 'ğŸ’¡ To view specific changes: git show upstream-mcp/trunk:mcp/woo/<filename>'"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
