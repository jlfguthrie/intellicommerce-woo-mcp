{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "‚ú® Build IntelliCommerce‚ú® Woo MCP",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "üöÄ Start IntelliCommerce‚ú® Woo MCP Server",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*IntelliCommerce.*Woo MCP Server.*starting.*$",
          "endsPattern": "^.*IntelliCommerce.*Woo MCP Server.*running.*stdio.*$"
        }
      }
    },
    {
      "label": "üîÑ Watch & Build IntelliCommerce‚ú® Woo MCP",
      "type": "shell",
      "command": "npx",
      "args": ["tsc", "--watch"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "üßπ Clean Build Directory",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "üì¶ Install Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "üîç Test MCP Connection",
      "type": "shell",
      "command": "npx",
      "args": ["@modelcontextprotocol/inspector", "node", "${workspaceFolder}/build/server.js"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "dependsOn": "‚ú® Build IntelliCommerce‚ú® Woo MCP"
    },
    {
      "label": "üåø Create Feature Branch",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "read -p 'Feature name (without feature/): ' name && git checkout main && git pull origin main && git checkout -b feature/$name"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "üì§ Push Feature Branch",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "branch=$(git branch --show-current) && git push -u origin $branch"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "üîÄ Create Pull Request",
      "type": "shell",
      "command": "gh",
      "args": ["pr", "create", "--web"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "üßπ Cleanup Feature Branch",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "current=$(git branch --show-current) && git checkout main && git pull origin main && git branch -d $current"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "‚¨ÜÔ∏è Sync with Upstream",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "git fetch upstream && git checkout main && git merge upstream/main && git push origin main"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
